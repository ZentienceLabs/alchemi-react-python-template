{
  "name": "fullstack-monorepo",
  "version": "1.0.0",
  "description": "React + FastAPI monorepo with shadcn/ui and Tailwind CSS",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd web && npm run dev",
    "dev:api": "cd api && python -m uvicorn main:app --reload --port 8000",
    "build": "npm run build:web",
    "build:web": "cd web && npm run build",
    "install:all": "npm install && cd web && npm install && cd ../api && pip install -r requirements.txt",
    "type-check": "cd web && npm run type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}